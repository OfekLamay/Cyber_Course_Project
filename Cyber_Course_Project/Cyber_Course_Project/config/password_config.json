{
    "password_policy": {
        "min_length": 8,
        "max_length": 128,
        "require_uppercase": true,
        "require_lowercase": true,
        "require_digits": true,
        "require_special_chars": true,
        "special_chars": "!@#$%^&*()_+-=[]{}|;:,.<>?",
        "min_special_chars": 1,
        "min_digits": 1,
        "min_uppercase": 1,
        "min_lowercase": 1,
        "forbidden_patterns": [
            "password",
            "123456",
            "qwerty",
            "abc123"
        ],
        "max_repeated_chars": 2
    },
    "security": {
        "salt_rounds": 12,
        "hmac_key": "your_secret_hmac_key_here_change_this",
        "session_timeout": 3600
    }
}