{
    "password_policy": {
        "min_length": 8,
        "max_length": 128,
        "require_uppercase": true,
        "require_lowercase": true,
        "require_digits": true,
        "require_special_chars": true,
        "special_chars": "!@#$%^&*()_+-=[]{}|;:,.<>?",
        "min_special_chars": 1,
        "min_digits": 1,
        "min_uppercase": 1,
        "min_lowercase": 1,
        "forbidden_patterns": [
            "password",
            "123456",
            "qwerty",
            "abc123"
        ],
        "max_repeated_chars": 2
    },
    "security":
    {
        "salt_rounds": 12,
        "hmac_key": "your_secret_hmac_key_here_change_this",
        "session_timeout": 3600,
       
        "sign_in_attempts": 
        {
           
            "max_attempts": 3,
            "attempt_window_seconds": 900,
            "lockout_duration_seconds": 1800,
            "reset_attempts_on_success": true,
            "progressive_lockout": true,
            "progressive_lockout_multiplier": 2,

            "storage_policy":
            {
                
                "allow_in_memory": false,
                "required_backend": "cache"

            }

        }
    }
}